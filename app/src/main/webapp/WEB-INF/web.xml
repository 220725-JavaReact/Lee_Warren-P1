<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Wyn&apos;s Wild Wares Application</display-name>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>com.revature.app.servlets.RegistrationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SessionServlet</servlet-name>
    <servlet-class>com.revature.app.servlets.SessionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShoppingServlet</servlet-name>
    <servlet-class>com.revature.app.servlets.ShoppingServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SessionServlet</servlet-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShoppingServlet</servlet-name>
    <url-pattern>/browse</url-pattern>
  </servlet-mapping>
</web-app>

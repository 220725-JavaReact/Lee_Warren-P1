<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Wyn&apos;s Wild Wares</display-name>
  <servlet>
    <servlet-name>ProductController</servlet-name>
    <servlet-class>com.revature.rest.controller.ProductController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.revature.rest.controller.UserController</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ProductController</servlet-name>
    <url-pattern>/product</url-pattern>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/user</url-pattern>
    <url-pattern>/user/add</url-pattern>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>
</web-app>

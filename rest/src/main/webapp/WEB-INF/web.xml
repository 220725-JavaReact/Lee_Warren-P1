<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Wyn&apos;s Wild Wares</display-name>
  <servlet>
    <servlet-name>ProductController</servlet-name>
    <servlet-class>com.revature.rest.controller.ProductController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StoreController</servlet-name>
    <servlet-class>com.revature.rest.controller.StoreController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StoreProductController</servlet-name>
    <servlet-class>com.revature.rest.controller.StoreProductController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.revature.rest.controller.UserController</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ProductController</servlet-name>
    <url-pattern>/product</url-pattern>
    <url-pattern>/product/add</url-pattern>
    <url-pattern>/product/udpate</url-pattern>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StoreController</servlet-name>
    <url-pattern>/store</url-pattern>
    <url-pattern>/store/add</url-pattern>
    <url-pattern>/store/update</url-pattern>
    <url-pattern>/stores</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StoreProductController</servlet-name>
    <url-pattern>/product/stores</url-pattern>
    <url-pattern>/store/products</url-pattern>
    <url-pattern>/store/products/add</url-pattern>
    <url-pattern>/store/products/delete</url-pattern>
    <url-pattern>/store/products/update</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/user</url-pattern>
    <url-pattern>/user/add</url-pattern>
    <url-pattern>/user/update</url-pattern>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>
</web-app>
